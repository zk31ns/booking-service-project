# ========== App Settings ==========
app_title=Booking Seats API
app_version=1.0.0
debug=True
environment=development

# ========== Server ==========
host=127.0.0.1
port=8000

# ========== Database ==========
# Нестандартный порт 5433 (избегаем конфликтов с другими PostgreSQL)
database_url=postgresql+asyncpg://postgres:postgres@localhost:5433/booking_db
db_echo=True

# ========== JWT & Auth ==========
jwt_secret_key=your-super-secret-dev-key
jwt_algorithm=HS256
access_token_expire_minutes=60
refresh_token_expire_days=7

# ========== Redis ==========
redis_url=redis://localhost:6379/0

# ========== RabbitMQ / Celery ==========
rabbitmq_url=amqp://guest:guest@localhost:5672/
celery_broker_url=amqp://guest:guest@localhost:5672/
celery_result_backend=redis://localhost:6379/0
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ========== Flower ==========
FLOWER_BASIC_AUTH=admin:secretpassword
FLOWER_PERSISTENT=true
FLOWER_DB=/data/flower.db

# ========== Files / Media ==========
max_upload_size=5242880
allowed_image_types=image/jpeg,image/png
media_path=/app/media

# ========== Logging ==========
log_level=INFO
log_file=logs/app.log
log_rotation=10 MB
log_retention=7 days

# ========== CORS ==========
frontend_url=http://localhost:3000

# ========== Telegram bot ID ==========
# Используется для отправки уведомлений через Telegram
telegram_bot_token=
telegram_api_url=https://api.telegram.org
