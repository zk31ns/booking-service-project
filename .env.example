# ========== App Settings ==========
app_title=Booking Seats API
app_version=1.0.0
debug=False
environment=production

# ========== Server ==========
host=0.0.0.0
port=8000

# ========== Database ==========
# Нестандартный порт 5433 (избегаем конфликтов с другими PostgreSQL)
# ВАЖНО: Замените на реальные credentials для production
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=booking_db
POSTGRES_PORT=5433
database_url=postgresql+asyncpg://CHANGE_ME_USER:CHANGE_ME_PASSWORD@CHANGE_ME_HOST:5433/booking_db
db_echo=False

# ========== JWT & Auth ==========
# ВАЖНО: Генерируйте новый секретный ключ для production!
jwt_secret_key=CHANGE_ME_GENERATE_NEW_SECRET_KEY_FOR_PRODUCTION
jwt_algorithm=HS256
access_token_expire_minutes=60
refresh_token_expire_days=7

# ========== Redis ==========
# Формат: redis://password@host:port/db
REDIS_PORT=6379
redis_url=redis://CHANGE_ME_PASSWORD@CHANGE_ME_HOST:6379/0

# ========== RabbitMQ / Celery ==========
# Формат: amqp://user:password@host:port/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
rabbitmq_url=amqp://CHANGE_ME_USER:CHANGE_ME_PASSWORD@CHANGE_ME_HOST:5672/
celery_broker_url=amqp://CHANGE_ME_USER:CHANGE_ME_PASSWORD@CHANGE_ME_HOST:5672/
celery_result_backend=redis://CHANGE_ME_PASSWORD@CHANGE_ME_HOST:6379/0

# ========== Files / Media ==========
max_upload_size=5242880
allowed_image_types=image/jpeg,image/png
media_path=/app/media

# ========== Logging ==========
log_level=INFO
log_file=logs/app.log
log_rotation=10 MB
log_retention=7 days

# ========== CORS ==========
frontend_url=http://CHANGE_ME_FRONTEND_HOST:3000

# ========== Flower (Celery monitoring) ==========
FLOWER_PORT=5555

# ========== Telegram bot ID ==========
# Используется для отправки уведомлений через Telegram
telegram_bot_token=CHANGE_ME_YOUR_TELEGRAM_BOT_TOKEN
telegram_api_url=https://api.telegram.org
