# ========== App Settings ==========
APP_TITLE=Booking Seats API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ========== Server ==========
HOST=127.0.0.1
PORT=8000

# ========== Database ==========
# Нестандартный порт 5433 (избегаем конфликтов с другими PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/booking_db
DB_ECHO=True

# ========== JWT & Auth ==========
JWT_SECRET_KEY=your-super-secret-dev-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== Redis ==========
REDIS_URL=redis://localhost:6379/0

# ========== RabbitMQ / Celery ==========
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# ========== Files / Media ==========
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png
MEDIA_PATH=/app/media

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# ========== CORS ==========
FRONTEND_URL=http://localhost:3000
